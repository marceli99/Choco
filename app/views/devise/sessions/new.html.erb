<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: t('Login') %><br />
    <%= f.password_field :password, autocomplete: "current-password", placeholder: t('password') %><br />
<br />
  <% if devise_mapping.rememberable? %>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>
<br />
<%= render "devise/shared/links" %>
