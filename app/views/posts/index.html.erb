 <table>
    <tr>
      <th>Title</th> <!-- TODO: Add translation -->
      <th>Content</th>
      <th>Actions</th>
    </tr>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= sanitize(post.content[0, 150], tags:[]) %>...</td>
        <td><%= link_to "Zobacz więcej...", post_path(post.id) %> | <%= link_to "Usuń", post_path(post.id), method: :delete , class: 'right'%></td> <!-- TODO: Add translation -->
      </tr>
    <% end %>
  </table>